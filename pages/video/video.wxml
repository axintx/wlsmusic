<!--pages/video/video.wxml-->
<view class="videoContainer">
  <!-- 头部区域 -->
  <view class="header">
    <image src="/static/images/video/video.jpg"></image>
    <view class="search">
      搜索音乐
    </view>
    <image src="/static/image/logo.png"></image>
  </view>

  <!-- 导航区域 -->
  <scroll-view scroll-x class="navScroll" enable-flex>
    <view class="navItem" wx:for="{{videoGroupList}}" wx:key="id">
      <view class="navContent {{navId === item.id?'active':''}}" id="{{item.id}}" data-id="{{item.id}}">
        {{item.name}}
      </view>
    </view>
  </scroll-view>

  <!-- 视频列表区域 -->
  <scroll-view class="videoScroll" scroll-y>
    <view class="videoItem" wx:for="{{videoList}}" wx:key="id">
      <video class="common" src="{{item.data.urlInfo.url}}"></video>

      <view class="content">{{item.data.title}}</view>
        
    </view>
      
    
  </scroll-view>
    


</view>
